                            <li class="navload"><a href="@Url.Action("RequestForChangeReport", "BillsPayReport")"><i class="glyphicon glyphicon-calendar"></i> REQUEST FOR CHANGE REPORT</a></li>
                        </ul>
                    </li>
                    <li class="navload"><a href="@Url.Action("Reprint", "BillsPay")"><i class="glyphicon glyphicon-print"></i> RE-PRINT</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-info-sign"></i> FAQ</a></li>
                </ul>

                <ul class="nav navbar-nav pull-right user-logged-in">
                    @{
            string[] values = User.Identity.Name.Split('|');
                    }
                    <li><p class="l-fontsize14"><i class="glyphicon glyphicon-user"></i> Hello, @values[0].Trim()</p></li>
                </ul>

            </div>
        }
    </div>
