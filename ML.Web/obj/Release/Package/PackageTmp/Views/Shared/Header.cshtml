@using System.Activities.Statements
@using System.Web.Optimization

<!--Navigation Menu-->
<nav class="navbar navbar-inverse navbar-static-top navshadow" role="navigation" id="siteHead">
    <div class="container-fluid">
        @if (!Request.IsAuthenticated)
        {
            <span class="navbar-brand brand-logo-small">
                <img src="~/Content/Images/logo.png" class="small-logo" alt="" />
            </span>
            <div class="btn-group pull-right btn-settings">
                <button type="button" class="btn btn-sm">
                    @Html.ActionLink("Sign In", "Login", "User")
                </button>
            </div>
        }
        else
        {
            <div class="btn-group pull-right btn-settings">
                <button type="button" class="btn dropdown-toggle btn-sm" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-cog"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#" class="" data-toggle="modal" data-target=".bs-example-modal-cp"><i class="glyphicon glyphicon-pencil"></i> Change Password</a></li>
                    <li class="divider"></li>
                    <li><a href="#" class="" data-toggle="modal" data-target=".bs-example-modal-sm"><i class="glyphicon glyphicon-log-out"></i> Log Out</a></li>
                </ul>
            </div>

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand brand-logo-small">
                    <img src="~/Content/Images/logo.png" class="small-logo" alt="" />
                </span>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navpadding">
                    <li class="l-fontsize14 navload">
                        <a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-home"></i> HOME</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle l-fontsize14" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-tasks"></i>
                            TRANSACTIONS
                            <b class="caret"></b>
                        </a>
